{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Notice list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Expirationdate</th>
                <th>Creationdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notice in notices %}
            <tr>
                <td><a href="{{ path('notice_show', { 'id': notice.id }) }}">{{ notice.id }}</a></td>
                <td>{{ notice.title }}</td>
                <td>{{ notice.description }}</td>
                <td>{% if notice.expirationDate %}{{ notice.expirationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if notice.creationDate %}{{ notice.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                  
                    <li>
                        <a href="{{ path('notice_show', { 'id': notice.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('notice_edit', { 'id': notice.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('notice_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
