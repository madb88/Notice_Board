{% extends '::base.html.twig' %}

{% block body %}
    <h1>{{ notice.title }}</h1>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notice.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ notice.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ notice.description }}</td>
            </tr>
            <tr>
                <th>Expirationdate</th>
                <td>{{ notice.expirationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{{ notice.creationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Created by</th>
                <td>{{ notice.user }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ notice.category.name }}</td>
            </tr>
            {% if notice.picture is not null %}
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('images/' ~ notice.picture.path) }}" alt="Symfony!" /></td>
            </tr>
            {% endif %}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('notice') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('notice_edit', { 'id': notice.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
