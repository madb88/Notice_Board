<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container">
        <h1>Notice Board Application</h1>

        <a href="{{ path('fos_user_security_login')}}" class="btn btn-primary btn" role="button">Login</a>
        <a href="{{ path('fos_user_registration_register')}}" class="btn btn-success btn" role="button">Registration</a>
        <a href="{{ path('notice_new')}}" class="btn btn-warning btn" role="button">Add notice</a>
        <a href="{{ path('showMyNotices')}}" class="btn btn-danger btn" role="button">Show all your notices</a>
        <a href="#" class="btn btn-danger disabled" role="button" >Show notices by category</a>

        {% block body %}
            <h2>Current Notice's</h2>
            <div class='container'>
                <div class="row">                   
                    <div class="col-sm-6 col-md-12">
                        {% for notice in notices %}
                            <div class="col-md-4">
                                <div class="thumbnail">
                                    {%if notice.picture.path is defined%}
                                    <img src="{{ asset('images/' ~ notice.picture.path) }}" alt="Symfony">
                                    {% else %}
                                    <img src="{{ asset('images/noPhoto.jpg') }}" alt="Symfony">
                                    {% endif %}
                                        <div class="caption">
                                        <h3>{{notice.title}}</h3>
                                        <p>Description: {{notice.description}}</p>
                                        <p>Creation date: {{notice.creationDate|date('Y-m-d')}}</p>
                                        <p><a href="{{ path('notice_show', { 'id': notice.id }) }}" class="btn btn-primary btn-block" role="button">Show notice</a></p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p>No notices found<p>
                        {% endfor %}
                    </div>
                </div>
            {% endblock %}
        </div>
    {% block javascripts %}{% endblock %}
</body>
</html>